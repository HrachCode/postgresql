{{#each comments}}
    <div class="card" style="width: 100%;">
  <div class="card-header">
    {{userName}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{comment}}</p>
      <footer class="blockquote-footer">Someone famous in <cite title="Source Title">{{posts_id}}</cite></footer>
    </blockquote>
  </div>
</div>

{{/each}}